@using VendorTracker.Models;

<h1>Vendor List</h1>
@if (Model.Count == 0)
{
  <p>There are no Vendors! Generate some business!</p>
}
<ul>
  @foreach(Vendor vendor in Model)
  {
    <li>
      <a href="/vendors/@vendor.Id">@vendor.Name</a>
    </li>
  }
</ul>

<a href="/vendors/new">Add a new vendor</a>